<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Subject">
	<resultMap type="Subject" id="SubjectResultMap">
		<result column="subject_num" property="subject_num"/>
		<result column="category" property="category"/>
		<result column="subject_name" property="subject_name"/>
	</resultMap>
	
	<select id="getSubject" resultMap="SubjectResultMap" parameterType="java.lang.Integer">
		<![CDATA[
			SELECT SUBJECT_NUM, CATEGORY, SUBJECT_NAME
			FROM SUBJECT
			WHERE SUBJECT_NUM=#{subject_num}
		]]>
	</select>
	
	<insert id="addSubject" parameterType="Subject">
		<![CDATA[
			INSERT INTO SUBJECT VALUES(SUBJECT_SEQ.NEXTVAL,
			#{category}, #{subject_name})
		]]>
	</insert>
	
	<delete id="deleteSubject" parameterType="java.lang.Integer">
		<![CDATA[
			DELETE SUBJECT WHERE SUBJECT_NUM = #{subject_num}
		]]>
	</delete>
	
	<select id="getSubjectList" resultType="Subject">
		<![CDATA[
			SELECT SUBJECT_NUM, CATEGORY, SUBJECT_NAME
			FROM SUBJECT
		]]>
	</select>
</mapper>